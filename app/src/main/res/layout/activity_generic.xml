<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout
        android:id="@+id/headerFragment"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:id="@+id/contenidoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerFragment"
        android:layout_above="@+id/controlsFragment"
        android:layout_alignParentStart="true"
        tools:ignore="UselessLeaf" />
    <FrameLayout
        android:id="@+id/controlsFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_above="@id/statusbarFragment"/>
    <FrameLayout
        android:id="@+id/statusbarFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
    <RelativeLayout
        android:id="@+id/progreso"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grisTrans"
        android:visibility="visible">

        <ProgressBar
            android:theme="@style/ProgressBarmenu1p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>